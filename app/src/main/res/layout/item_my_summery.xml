<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_20sdp"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_toLeftOf="@+id/RR_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/img1"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:scaleType="centerCrop"
                android:src="@mipmap/img_home_one" />

            <LinearLayout
                android:id="@+id/llName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">


                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maximus Gold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs.180 per KG"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_12sdp"
                   />

                <TextView
                    android:id="@+id/txtQuntity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity :"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_12sdp"
                    />

                <LinearLayout
                    android:id="@+id/ll_additem"
                    android:visibility="gone"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/border"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/RR_mnus"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/minus">

                        </ImageView>

                    </RelativeLayout>

                    <View
                        android:layout_width="1sp"
                        android:layout_height="match_parent"
                        android:background="@color/purple_200">

                    </View>

                    <RelativeLayout
                        android:id="@+id/RR_plus"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="01"
                            android:textColor="@color/purple_200"
                            android:textSize="@dimen/_14sdp"
                            >

                        </TextView>

                    </RelativeLayout>


                    <View
                        android:layout_width="1sp"
                        android:layout_height="match_parent"
                        android:background="@color/purple_200">

                    </View>


                    <RelativeLayout
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/add">

                        </ImageView>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/RR_ll"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/txtDelete"
                android:padding="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:textColor="#FF5D58"
                android:textSize="@dimen/_18sdp"
                />

            <TextView
                android:id="@+id/txtWishList"
                android:padding="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wishlist"
                android:textColor="#FFC517"
                android:textSize="@dimen/_18sdp"
               />

        </RelativeLayout>
        
    </RelativeLayout>

</androidx.cardview.widget.CardView>