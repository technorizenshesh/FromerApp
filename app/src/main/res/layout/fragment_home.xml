<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/RRToolbar"
            android:background="@color/purple_200"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        >

        <RelativeLayout
            android:id="@+id/RRnotification"
            android:layout_alignParentRight="true"
            android:visibility="visible"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            >

            <ImageView
                android:src="@mipmap/notification"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp">

            </ImageView>

        </RelativeLayout>

            <TextView
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"
                android:text="Choose on Option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

    </RelativeLayout>

        <ScrollView
            android:layout_below="@+id/RRToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please choose one option between crops and livestock to proceed further."
                    android:textColor="@color/purple_200"
                    android:textSize="@dimen/_16sdp" />

                <ImageView
                    android:id="@+id/imgCrops"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_home_one"
                    android:layout_width="@dimen/_170sdp"
                    android:layout_height="@dimen/_150sdp"
                    >
                </ImageView>


                <TextView
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_18sdp"
                    android:text="Crops"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <ImageView
                    android:id="@+id/imgLive"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@mipmap/live"
                    android:layout_width="@dimen/_170sdp"
                    android:layout_height="@dimen/_150sdp"
                    >
                </ImageView>


                <TextView
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_18sdp"
                    android:text="LiveStocks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>



            </LinearLayout>



        </ScrollView>

    </RelativeLayout>

</layout>
